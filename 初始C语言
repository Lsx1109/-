int main()//~
{
	int a = 0;//整形占用4个字节，32bit位
	int b = ~a;//~按（2进制）位取反
	//1010 按位取反 0101
	printf("%d\n", b);
	//负数在内存中存储的时候，存储的是二进制的补码
	return 0;
}
int main()//++和--
{
	int a = 10;
	//int b = a++;//后置++，先使用，再++
	//printf("a = %d b = %d\n", a, b);//a = 11 b = 10
	//int b = ++a;//前置++，先++，再使用
	//printf("a = %d b = %d\n", a, b);//a = 11  b = 11
	//int b = a--;
	//printf("a = %d b = %d\n", a, b);//a = 9  b = 10
	int b = --a;
	printf("a = %d b = %d\n", a, b);//a = 9  b = 9
	return 0;
}
int main()//强制类型转化（ ）
{
	int a = (int)3.14;
	return 0;
}
int main()
{   
	//真：非0  假：0  &&：逻辑与  ||:逻辑或
	int a = 3;
	int b = 5;
	int c = a&&b;
	printf("c = %d\n", c);
	return 0;
}
int main()//exp1 ? exp2 : exp3; 
{   
	int a = 10;
	int b = 20;
	int max = 0;
	max = (a > b ? a : b);
	printf("%d\n", max);
	return 0;
}
int Add(int x, int y)
{
	int z = 0;
	z = x + y;
	return z;
}
int main()//exp1 ? exp2 : exp3; 
{   
	//int arr[10] = { 0 };
	//arr[4];//[]：下标引用操作符
	int a = 10;
	int b = 20;
	int sum = Add(a, b);//( )：函数调用操作符
	return 0;
}
int main()
{
	//typedef 类型定义
	typedef unsigned int u_int;
	unsigned int num = 20;
	u_int num2 = 20;
	return 0;
}
void test()//static修饰局部变量，局部变量生命周期变长
{
	static int a = 1;//a是一个静态的局部变量 
	a++;
	printf("a = %d\n",a);
 } 
 int main()
 {
 	int i = 0;
 	while (i<5)
 	{
 		test ();
 		i++;
	}
	 return 0;
  } 
  //声明外部函数
  extern int Add(int,int);
 
 
 #include <stdio.h>
#define MAX 100//defind 定义标识符常量 
int main ()
{
	int a = MAX; 
	return 0;
}


#include <stdio.h>
MAX(int x,int y)//函数的实现 
{
	if(x>y)
	return x;
	else
	return y;
}
//宏的定义
#define MAX(x,y) (x>y?x:y) 
int main()
{
	int a = 10;
	int b = 20;
	int max = MAX(a,b);
	printf("max = %d\n",max);
	//宏的方式 
	max = MAX(a,b);
	printf("max = %d\n",max);
	return 0; 
 } 



























